{
  "name": "@ecore/exception-filters",
  "version": "0.0.1",
  "description": "A collection of exception filters for the Customer E-commerce Portal Application",
  "private": true,
  "author": "Jefferson Pillejera <jefferson.pillejera@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@prisma/client": "^6.8.2",
    "@ecore/utils": "workspace:*",
    "@ecore/domain": "workspace:*",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.15.29",
    "@ecore/eslint-config": "workspace:*",
    "@ecore/typescript-config": "workspace:*",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
